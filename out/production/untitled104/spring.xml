<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"   "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>
        <bean id="parent_triangle" class="com.codewithDennis.Triangle" abstract="true">
                <property name="points">
                <list>
                        <ref bean="pointA"/>
                </list>
                </property>
        </bean>
        <bean id="triangle1" class="com.codewithDennis.Triangle" parent="parent_triangle">
                <property name="points">
                        <list merge="true">
                                <ref bean="pointB"/>
                        </list>
                </property>
        </bean>

        <bean id="triangle2" class="com.codewithDennis.Triangle" parent="parent_triangle">
                <property name="pointB" ref="pointB"/>
        </bean>
        

        <bean id="pointA" class="com.codewithDennis.Point">
                <property name="a" value="0" />
                <property name="b" value="0" />
        </bean>
        <bean id="pointB" class="com.codewithDennis.Point">
                <property name="a" value="-20" />
                <property name="b" value="0" />
        </bean>
        <bean id="pointC" class="com.codewithDennis.Point">
                <property name="a" value="0" />
                <property name="b" value="20" />
        </bean>

</beans>